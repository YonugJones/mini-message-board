<head>
  <title>Homepage</title>
</head>
<body>
  <h1>Homepage</h1>
  <a href="/new">New Message</a>
  <ul>
    <% for (let i = 0; i < messages.length; i++) { %>
      <li>
        <p><%= messages[i].text %></p>
        <p><%= messages[i].user %></p>
        <p><%= messages[i].added.toLocaleString() %></p>
        <a href="/message/<%= i %>">Open</a>
      </li>
    <% } %>
  </ul>
</body>
</html>